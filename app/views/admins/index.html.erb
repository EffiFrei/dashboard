<h1>List of all admins</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Actions</th>
  </tr>

  <% @admins.each do |admin| %>
    <tr>
      <td><%= admin.name %></td>
      <td><%= admin.phone %></td>
      <td><%= admin.email %></td>
      <td><%= link_to 'Show', admin_path(admin), class: "button" %>
      <%= link_to 'Edit', edit_admin_path(admin), class: "warning button" %>
      <%= link_to 'Destroy', admin_path(admin),
              method: :delete,
              data: { confirm: 'Are you sure?' },
              class: "alert button" %></td>
    </tr>
  <% end %>
</table>