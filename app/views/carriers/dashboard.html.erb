<h1>Carrier Dashboard</h1>

<h2>Drivers List</h2>

<table>
  <thead>
    <tr>
      <th>DL</th>
      <th>DL issue date</th>
      <th>Name</th>
      <th>Adress</th>
      <th>DoB</th>
      <th>Blood Group</th>
      <th>DL expiry</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @drivers.each do |driver| %>
      <tr>
        <td><%= driver.DL %></td>
        <td><%= driver.DL_issue_date %></td>
        <td><%= driver.name %></td>
        <td><%= driver.adress %></td>
        <td><%= driver.DOB %></td>
        <td><%= driver.blood_group %></td>
        <td><%= driver.DL_expiry %></td>
        <td><%= link_to 'Show', driver, class: "button" %></td>
        <td><%= link_to 'Edit', edit_driver_path(driver), class: "warning button" %></td>
        <td><%= link_to 'Destroy', driver, method: :delete, data: { confirm: 'Are you sure?' }, class: "alert button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Trucks List</h2>

<table>
  <thead>
    <tr>
      <th>Registration num</th>
      <th>Manufacturer</th>
      <th>Model</th>
      <th>Load capacity</th>
      <th>Body type</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @trucks.each do |truck| %>
      <tr>
        <td><%= truck.registration_num %></td>
        <td><%= truck.manufacturer %></td>
        <td><%= truck.model %></td>
        <td><%= truck.load_capacity %></td>
        <td><%= truck.body_type %></td>
        <td><%= link_to 'Show', truck, class: "button" %>
        <%= link_to 'Edit', edit_truck_path(truck), class: "warning button" %>
        <%= link_to 'Destroy', truck, method: :delete, data: { confirm: 'Are you sure?' }, class: "alert button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Request List</h2>
 
<table>
  <tr>
    <th>ID</th>
    <th>Required date</th>
    <th>Service level</th>
    <th>Source</th>
    <th>Destination</th>
    <th>Actions</th>
  </tr>
 
  <% @requests.each do |request| %>
    <tr>
      <td><%= request.id %></td>
      <td><%= request.reqd_date %></td>
      <td><%= request.service_lvl %></td>
      <td><%= request.source %></td>
      <td><%= request.destination %></td>
      <td><%= link_to 'Show', request_path(request), class: "button" %>
      <%= link_to 'Edit', edit_request_path(request), class: "warning button" %>
      <%= link_to 'Destroy', request_path(request),
              method: :delete,
              data: { confirm: 'Are you sure?' },
              class: "alert button" %></td>
    </tr>
  <% end %>
</table>