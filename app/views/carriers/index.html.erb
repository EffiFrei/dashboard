<p id="notice"><%= notice %></p>

<h1>List of all carriers</h1>

<table>
  <thead>
    <tr>
      <th>Company Name</th>
      <th>Name of Point of Contact</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <!-- <th>Registration Date</th> -->
      <th>Name of Owner</th>
      <th>Organisation Type</th>
      <!-- <th>PAN</th> -->
      <!-- <th>Service Tax no.</th> -->
      <!-- <th>Date of Incorporation</th> -->
      <!-- <th>CIN</th> -->
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @carriers.each do |carrier| %>
      <tr>
        <td><%= carrier.name %></td>
        <td><%= carrier.PoC %></td>
        <td><%= carrier.address %></td>
        <td><%= carrier.phone %></td>
        <td><%= carrier.email %></td>
        <!-- <td><%= carrier.reg_date %></td> -->
        <td><%= carrier.owner_name %></td>
        <td><%= carrier.org_type %></td>
        <!-- <td><%= carrier.PAN %></td> -->
        <!-- <td><%= carrier.ST_num %></td> -->
        <!-- <td><%= carrier.incorporation_date %></td> -->
        <!-- <td><%= carrier.CIN %></td> -->
        <td><%= link_to 'Show', carrier, class: "button" %></td>
        <td><%= link_to 'Edit', edit_carrier_path(carrier), class: "warning button" %></td>
        <td><%= link_to 'Destroy', carrier, method: :delete, data: { confirm: 'Are you sure?' }, class: "alert button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Carrier', new_carrier_path, class: "button" %>
