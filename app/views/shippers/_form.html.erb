<%= form_with(model: shipper, local: true) do |form| %>
  <% if shipper.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(shipper.errors.count, "error") %> prohibited this shipper from being saved:</h2>

      <ul>
      <% shipper.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="medium-6 columns">
      <h4>Company Details</h4>
      <%= form.label :name, "Name of the Company" %>
      <%= form.text_field :name, id: :shipper_name %>

      <%= form.label :address %>
      <%= form.text_field :address, id: :shipper_address %>

      <%= form.label :org_type, "Organisation Type" %>
      <%= form.text_field :org_type, id: :shipper_org_type %>

      <%= form.label :PAN, "PAN" %>
      <%= form.text_field :PAN, id: :shipper_PAN %>

      <%= form.label :ST_num, "Service Tax No." %>
      <%= form.text_field :ST_num, id: :shipper_ST_num %>

      <%= form.label :CIN, "CIN" %>
      <%= form.text_field :CIN, id: :shipper_CIN %>

      <%= form.label :reg_date, "Registration Date" %>
      <%= form.date_select :reg_date, id: :shipper_reg_date %>
    </div>

    <div class="medium-6 columns">
      <h4>Point of Contact</h4>
      <%= form.label :poc, "Name" %>
      <%= form.text_field :poc, id: :shipper_poc %>

      <%= form.label :email %>
      <%= form.text_field :email, id: :shipper_email, disabled: :disabled %>

      <%= form.label :phone %>
      <%= form.text_field :phone, id: :shipper_phone %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
